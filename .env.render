# WhatsApp Bot Environment Variables for Render Deployment
# Replace these placeholder values with actual values in the Render Dashboard

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# GupShup Configuration
GUPSHUP_API_KEY=your_gupshup_api_key_here
GUPSHUP_APP_NAME=your_gupshup_app_name
GUPSHUP_PHONE_NUMBER=your_whatsapp_phone_number
GUPSHUP_SOURCE=your_source_name
GUPSHUP_API_KEY_ALTERNATIVE=your_alternative_gupshup_api_key
GUPSHUP_APP_NAME_ALTERNATIVE=your_alternative_gupshup_app_name

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=no-reply@yourdomain.com
EMAIL_TO=notifications@yourdomain.com
EMAIL_CC=additional_recipient@yourdomain.com
EMAIL_BCC=secret_recipient@yourdomain.com
EMAIL_SUBJECT_PREFIX=[WhatsApp Bot]

# Web URLs
CONTROL_PANEL_URL=https://your-dashboard-url.com
WEBHOOK_URL=https://your-webhook-url.onrender.com

# Debug Mode
DEBUG=false

# Time Zone
TZ=America/Argentina/Buenos_Aires

# Server Port (Render will provide PORT automatically)
# PORT=3095 